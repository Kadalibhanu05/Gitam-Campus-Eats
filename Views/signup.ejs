<%- include('partials/header') %>

<div class="container mx-auto py-16 max-w-md">
    <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        <h2 class="text-3xl font-bold text-center mb-6">Sign Up</h2>

        <form action="/signup" method="POST" class="space-y-4">
            
            <div>
                <label class="block font-bold">Name</label>
                <input type="text" name="name" class="w-full border p-2 rounded" required>
            </div>

            <div>
                <label class="block font-bold">Email</label>
                <input type="email" name="email" class="w-full border p-2 rounded" required>
            </div>

            <div>
                <label class="block font-bold">Password</label>
                <input type="password" name="password" class="w-full border p-2 rounded" required>
            </div>

            <div>
                <label class="block font-bold text-gray-700 mb-1">I am a...</label>
                <select name="role" class="w-full border p-2 rounded bg-white" required>
                    <option value="student">Student</option>
                    <option value="owner">Canteen Owner</option>
                </select>
            </div>

            <button type="submit" class="w-full bg-green-600 text-white py-2 rounded font-bold hover:bg-green-700">
                Sign Up
            </button>

        </form>
        <p class="text-center mt-4">
            Already have an account? <a href="/login" class="text-green-600 font-bold">Login</a>
        </p>
    </div>
</div>

<%- include('partials/footer') %>