<%- include('partials/header') %>

<div class="bg-gray-50 min-h-screen py-12">
    <div class="container mx-auto px-4">

        <div class="text-center mb-12 relative"> <h1 class="text-4xl font-extrabold text-gray-800 tracking-tight">
                Canteens at <span class="text-green-600">
                    <%= locals.university || 'Gitam University' %>
                </span>
            </h1>
            <p class="text-gray-500 mt-3 text-lg">Select a canteen to view today's menu</p>

            <% if (locals.user && user.role === 'owner') { %>
                <div class="mt-6">
                    <a href="/add-canteen" class="inline-block bg-gray-900 text-white py-3 px-8 rounded-full font-bold shadow-lg hover:bg-black hover:scale-105 transition transform">
                        + Add New Canteen
                    </a>
                </div>
            <% } %>
        </div>

        <% if (canteens.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% canteens.forEach(canteen => { %>
                    <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden border border-gray-100 flex flex-col">

                        <div class="h-3 bg-green-500 w-full"></div>

                        <div class="p-8 flex-grow">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-2xl font-bold text-gray-800">
                                    <%= canteen.name %>
                                </h3>
                                <span class="text-3xl bg-green-50 rounded-full w-12 h-12 flex items-center justify-center">ğŸ”</span>
                            </div>

                            <p class="text-gray-500 text-sm mb-6">
                                Delicious campus food delivered straight to you.
                            </p>

                            <a href="/menu/<%= canteen.id %>"
                                class="block w-full text-center py-3 rounded-lg bg-gray-50 text-green-700 font-bold border border-gray-200 hover:bg-green-600 hover:text-white hover:border-green-600 transition-colors duration-200">
                                View Menu &rarr;
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            
            <div class="text-center py-20 bg-white rounded-xl shadow-sm border border-gray-100 max-w-2xl mx-auto">
                <div class="text-6xl mb-4">ğŸ½ï¸</div>
                <h3 class="text-2xl font-bold text-gray-800">No Canteens Found</h3>
                <p class="text-gray-500 mt-2">It looks like there aren't any canteens listed for Gitam yet.</p>
                
                <% if (locals.user && user.role === 'owner') { %>
                    <a href="/add-canteen" class="inline-block mt-6 bg-green-600 text-white py-2 px-6 rounded-lg font-bold hover:bg-green-700">
                        Create First Canteen
                    </a>
                <% } else { %>
                    <a href="/" class="inline-block mt-6 text-green-600 font-semibold hover:underline">Return Home</a>
                <% } %>
            </div>

        <% } %>

    </div>
</div>

<%- include('partials/footer') %>