<%- include('partials/header') %>

<div class="container mx-auto py-12 px-4 max-w-2xl">
    <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        <h1 class="text-3xl font-bold text-center mb-2"><%= canteen.name %></h1>
        <p class="text-center text-gray-500 mb-8">Manage menu items</p>

        <div class="mb-8 p-6 bg-gray-50 rounded-lg border border-gray-200">
            <h3 class="font-bold text-gray-800 mb-4 text-lg">Current Menu Items:</h3>
            
            <% if (canteen.menu.length > 0) { %>
                <div class="space-y-3">
                    <% canteen.menu.forEach(item => { %>
                        <div class="flex justify-between items-center bg-white p-3 rounded shadow-sm border border-gray-100">
                            
                            <span class="font-medium text-gray-700">
                                <%= item.name %> <span class="text-green-600 font-bold ml-2">₹<%= item.price %></span>
                            </span>

                            <form action="/delete-item" method="POST" style="margin:0;" onsubmit="return confirm('Are you sure you want to delete <%= item.name %>?');">
                                <input type="hidden" name="canteenId" value="<%= canteen._id %>">
                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                
                                <button type="submit" class="text-red-500 hover:text-red-700 font-bold text-sm px-3 py-1 hover:bg-red-50 rounded transition">
                                    ✕ Delete
                                </button>
                            </form>

                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-gray-400 italic">No items in this menu yet.</p>
            <% } %>
        </div>

        <form action="/edit-canteen/<%= canteen._id %>" method="POST" class="space-y-6">
            
            <div>
                <label class="block font-bold text-gray-700 mb-4">Add New Items</label>
                <div id="menu-container" class="space-y-4">
                    <div class="flex gap-4 items-start">
                        <div class="flex-1">
                            <input type="text" name="newItems[0][name]" class="w-full border p-3 rounded-lg" placeholder="New Item Name" required>
                        </div>
                        <div class="w-32">
                            <input type="number" name="newItems[0][price]" class="w-full border p-3 rounded-lg" placeholder="Price" required>
                        </div>
                    </div>
                </div>

                <button type="button" onclick="addMenuItem()" class="mt-4 text-green-600 font-bold hover:text-green-700 flex items-center gap-2">
                    <span class="text-2xl">+</span> Add Another Line
                </button>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-4 rounded-xl font-bold text-lg hover:bg-blue-700 transition shadow-lg mt-8">
                Save New Items
            </button>
        </form>
        
        <div class="text-center mt-6">
            <a href="/canteens" class="text-gray-500 hover:underline">Cancel</a>
        </div>
    </div>
</div>

<script>
    let itemIndex = 1;
    function addMenuItem() {
        const container = document.getElementById('menu-container');
        const newRow = document.createElement('div');
        newRow.className = 'flex gap-4 items-start';
        newRow.innerHTML = `
            <div class="flex-1">
                <input type="text" name="newItems[${itemIndex}][name]" class="w-full border p-3 rounded-lg" placeholder="New Item Name" required>
            </div>
            <div class="w-32">
                <input type="number" name="newItems[${itemIndex}][price]" class="w-full border p-3 rounded-lg" placeholder="Price" required>
            </div>
            <button type="button" onclick="this.parentElement.remove()" class="text-red-500 font-bold px-2 py-3 hover:text-red-700">✕</button>
        `;
        container.appendChild(newRow);
        itemIndex++;
    }
</script>

<%- include('partials/footer') %>